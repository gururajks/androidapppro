<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <TextView 
        android:id="@+id/bookmarkHint"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Bookmark your Bus Route" />
    
    <LinearLayout 
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal">"
	    <TextView 
	        android:id="@+id/addbases"
	        android:layout_width="0dp" 
	        android:layout_weight="1"
	        android:layout_height="wrap_content"
	        android:textSize="24sp"
	        android:text="Add your Bus Routes"
	        android:clickable="true"
	        android:onClick="bookmarkbus"
	        android:paddingTop="13dp"
	        android:paddingLeft="10dp"
	        android:paddingBottom="13dp"
	        android:background="#E3E3D6" />
		<ImageView 
		    android:id="@+id/pl"
		    android:layout_width="wrap_content"
	        android:layout_height="match_parent"
		    android:src="@drawable/ic_5_content_new"
		    android:paddingTop="13dp"
	        android:paddingRight="10dp"
	        android:paddingBottom="13dp"
		    android:background="#E3E3D6"
		     android:onClick="bookmarkbus"/>
	</LinearLayout>
	<ListView 
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent" 
    	android:id="@+id/fav_bus_list">
	</ListView>
</LinearLayout>